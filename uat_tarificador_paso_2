// Insert this script in "Siguiente paso" button above the page
<script type="text/javascript">
window.addEventListener('submit', function (event) { // Listen for form submit event. In this case change 'submit' by the correct event (if not sure if is 'click')
    // Trigger postMessage
    parent.postMessage(
    {
        'eventName': 'tarificador_steps',
        'step': 'What you need'
    }, 
    "https://uat.adecco.com") // replace with Top Domain
}, false);
</script>
